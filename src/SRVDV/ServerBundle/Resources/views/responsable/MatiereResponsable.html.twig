{% include "SRVDVServerBundle:responsable:MenuResponsable.html.twig" %}


<div id="nav" >
	<div id="enseignant" class="ouvert">
		<h3>Responsable</h3>
		<ul>
			<li  ><a href="{{ path('form_profile_user_resp')}}"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>  &nbsp; Mon profil</a></li></br>
			<li  class="active" ><a href="{{ path('list_form_Matiere')}}"><span class="glyphicon glyphicon-th-large" aria-hidden="true"></span> &nbsp; G&eacute;rer Matières</a></li></br>
			<li  ><a href="{{path('ChoixFiliereEns_responsable')}}"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>&nbsp;  Résérvation</a></li></br>
						
		</ul>
	</div>
	
</div>	


<div id="content">
	</br>
		<div class="col-xs-2 col-md-4 col-lg-3 centreVerticalement">	  
            {{ form_start(f,{'attr':{'novalidate':'novalidate'}})}}
					<div class="form-group">
					{{ form_label(f.nom,'Nom : ')}}
					{{ form_widget(f.nom,{'attr':{'class':'form-control'}})}}
					</div>
					<div class="form-group">
					{{ form_label(f.NombreGroupe,'Nombre de groupe : ')}}
					{{ form_widget(f.NombreGroupe,{'attr':{'class':'form-control'}})}}
					</div>
					<div class="form-group">
					{{ form_label(f.nbrHeurGroupe,'Nombre d\'heures par groupe : ')}}
					{{ form_widget(f.nbrHeurGroupe,{'attr':{'class':'form-control'}})}}
					</div>
					
					<div class="form-group">
					{{ form_label(f.semestre,'Semestre : ')}}
					{{ form_widget(f.semestre,{'attr':{'class':'form-control'}})}}
					</div>
					<div class="form-group">
					{{ form_label(f.Filiere,'Filiere : ')}}
					{{ form_widget(f.Filiere,{'attr':{'class':'form-control'}})}}
					</div>
					<div class="form-group">
					{{ form_label(f.TypeEnseignant,'Type Enseignement : ')}}
					{{ form_widget(f.TypeEnseignant,{'attr':{'class':'form-control'}})}}
					</div>
					
					<div class="form-group">
					
					{{ form_widget(f.save,{'attr':{'class':'btn btn-success'}})}}
					{{ form_widget(f.reset,{'attr':{'class':'btn btn-info'}})}}
					</div>
			{{ form_end(f)}}		
		</div>

		<div class=" centreVerticalement">

			<div class="table-responsive">
                <table id="example" class="display" cellspacing="0" width="100%" >
                	<thead>
					<tr><th>#</th><th>nom</th><th>heures/groupe</th><th>Nombre groupes</th><th>Année</th><th>semestre</th><th>Type Ensiegnement</th><th>Filiere</th><th>Mod</th><th>Supp</th></tr>
				   </thead>
				   <tbody>
						{% for u in ListeMatieres %}
							<tr>
								<td>{{ u.id }}</td>
								<td>{{ u.nom }}</td>
								<td>{{ u.nbrHeurGroupe }}</td>
								<td>{{ u.NombreGroupe }}</td>
								<td>{{ u.Filiere.User.dateUtilisateur }}</td>
								<td>{{ u.semestre }}</td>
								<td>{{ u.Filiere.nom}}</td>
								<td>{{ u.TypeEnseignant.libelle }}</td>
								
								<td><button  type="button" class="btn btn-primary" onclick="window.location.href ='{{path('Modifier_Matiere',{'id':u.id }) }}'"><b ><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></b></button></td>
								<td><button type="button" class="btn btn-warning"  onclick="SupprimerUser({{ u.id }})"><b><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></b></button></td>
							</tr>	
						{% endfor %}
                   </tbody>
				</table> 
            </div>
		</div>
	
</div>




<script>

$(document).ready(function() {
    $('#example').DataTable();
} );

function SupprimerUser(id){

	var rep=confirm('Clickez sur "OK" si vous voulez vraiment cet utilisateur' ) ;

	if(rep){
        window.location.href ="SuppMatiere/"+id;
	}

}
</script>


